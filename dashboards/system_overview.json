        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 0
        }
      },
      {
        "title": "Elite System Fitness",
        "type": "singlestat",
        "targets": [
          {
            "expr": "ouroboros_fitness_score",
            "legendFormat": "Fitness Score"
          }
