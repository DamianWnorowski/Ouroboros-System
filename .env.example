# OUROBOROS SYSTEM - ENVIRONMENT VARIABLES
# Copy this file to .env and fill in your values
# NEVER commit .env files to version control!

# ========================================
# CORE CONFIGURATION
# ========================================
ENVIRONMENT=development
LOG_LEVEL=INFO
DEBUG=false

# ========================================
# SERVICE DISCOVERY
# ========================================
CONSUL_HOST=localhost
CONSUL_PORT=8500
ETCD_HOST=localhost
ETCD_PORT=2379

# ========================================
# DATABASE
# ========================================
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=ouroboros
POSTGRES_USER=ouroboros
POSTGRES_PASSWORD=your_secure_password_here

# ========================================
# CACHING (Redis)
# ========================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ========================================
# KNOWLEDGE GRAPH (Neo4j)
# ========================================
NEO4J_HOST=localhost
NEO4J_PORT=7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=your_neo4j_password_here

# ========================================
# SECURITY
# ========================================
JWT_SECRET=your_jwt_secret_minimum_32_characters_long_for_security
JWT_ALGORITHM=HS256
JWT_EXPIRATION=3600

# ========================================
# API & SERVER
# ========================================
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4

# ========================================
# MONITORING
# ========================================
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
JAEGER_HOST=localhost
JAEGER_PORT=16686

# ========================================
# EXTERNAL APIs (Optional)
# ========================================
VIRUSTOTAL_API_KEY=
OTX_API_KEY=
SHODAN_API_KEY=

# ========================================
# GCP CONFIGURATION (Optional)
# ========================================
GCP_PROJECT_ID=
GCP_REGION=us-central1
GCP_BILLING_ID=

# ========================================
# ALERTING
# ========================================
ALERT_EMAIL=
SLACK_WEBHOOK_URL=
DISCORD_WEBHOOK_URL=

# ========================================
# NOTES
# ========================================
# 1. Generate secure passwords: openssl rand -base64 32
# 2. For JWT_SECRET: openssl rand -base64 64
# 3. Never commit .env files with real values
